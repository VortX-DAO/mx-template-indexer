{
  "name": "mxbi_crawler_template",
  "version": "1.0.0",
  "engines": {
    "node": ">=16"
  },
  "entryFile": "main-nest",
  "license": "Unlicense",
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "@apollo/server": "^4.9.1",
    "@hapi/joi": "^17.1.1",
    "@multiversx/sdk-core": "^12.4.2",
    "@multiversx/sdk-nestjs": "^0.5.5",
    "@multiversx/sdk-network-providers": "^1.4.0",
    "@nestjs/apollo": "^12.0.7",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/graphql": "^12.0.8",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/typeorm": "^10.0.0",
    "@types/hapi__joi": "^17.1.9",
    "async": "^3.2.4",
    "node-cron": "^3.0.2",
    "axios-retry": "^3.6.0",
    "graphql": "^16.7.1",
    "js-yaml": "^4.1.0",
    "dotenv": "^16.3.1",
    "pg": "^8.11.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "to-hex": "^0.0.18",
    "ts-morph": "^19.0.0",
    "typeorm": "^0.3.17",
    "yam": "^1.0.0",
    "yaml": "^2.3.1"
  },
  "scripts": {
    "build": "tsc",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:commonjs": "rimraf lib && tsc --target es5 --outDir lib --module commonjs --declaration",
    "build:es": "rimraf es && tsc --target es6 --outDir es --module es6",
    "start:crawler": "yarn copy-devnet-config && ts-node src/index.ts",
    "start:nest": "yarn copy-devnet-config && npm run generate-typings && nest start",
    "start:devnet": "yarn copy-devnet-config && ts-node src/",
    "start:devnet:local": "yarn copy-devnet-config && ts-node src/",
    "start:testnet": "yarn copy-testnet-config && ts-node src/",
    "start:devnet-alpha": "yarn copy-devnet-alpha-config && ts-node src/",
    "start:devnet-beta": "yarn copy-devnet-beta-config && ts-node src/",
    "prepare": "yarn build && husky install",
    "format": "prettier --write .",
    "copy-devnet-alpha-config": "cp ./config/config.devnet.alpha.yaml ./config/config.yaml",
    "copy-devnet-beta-config": "cp ./config/config.devnet.beta.yaml ./config/config.yaml",
    "copy-devnet-config": "cp ./config/config.devnet.yaml ./config/config.yaml",
    "copy-local-config": "cp ./config/config.local.yaml ./config/config.yaml",
    "copy-testnet-config": "cp ./config/config.testnet.yaml ./config/config.yaml",
    "copy-mainnet-config": "cp ./config/config.mainnet.yaml ./config/config.yaml",
    "copy-custom-config": "cp ./config/config.custom.yaml ./config/config.yaml",
    "generate-typings": "ts-node generate-typings"
  }
}
